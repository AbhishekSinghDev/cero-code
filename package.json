{
  "name": "cero-cli",
  "version": "0.1.0",
  "description": "AI-powered CLI with chat and agent capabilities",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "cero": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "validate-env": "tsx --env-file=.env src/env.ts",
    "build": "pnpm validate-env && tsup src/index.ts --format esm,cjs --clean --minify",
    "build:watch": "tsup src/index.ts --format esm,cjs --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "cli",
    "ai",
    "chat",
    "agent"
  ],
  "author": "Abhishek Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhishekSinghDev/cero-cli.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.34",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cross-keychain": "^1.1.0",
    "dotenv": "^17.2.3",
    "figlet": "^1.9.4",
    "open": "^11.0.0",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.12"
  }
}
